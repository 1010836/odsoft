#!groovy
node {

   stage('Checkout') {
      // Only checkout the code from the repository
      checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: 'bitbucket-credentials', url: 'git@bitbucket.org:mei-isep/odsoft-2016-nmb-g101.git']]])
	  //git credentialsId: 'bitbucket-credentials', url: 'git@bitbucket.org:mei-isep/odsoft-2016-nmb-g101.git'
   }
   stage('Build Jar') {
      // Only obtain the jar ofbiz (ofbiz.jar)
      //dir('/var/lib/jenkins/workspace/ODSOFT_Exercise6/ofbiz') {
        if (System.properties['os.name'].toLowerCase().contains('windows')) {
			bat './gradlew jar'
		} else {
			sh './gradlew jar'
		}
		
      }

   }
   stage('Archive Jar') {
     //Archive the (ofbiz.jar) from the previous stage
      dir('/var/lib/jenkins/workspace/ODSOFT_Exercise6/ofbiz') {
        archiveArtifacts 'build/libs/ofbiz.jar'
      }
   }
   stage('Unit Tests') {

      dir('/var/lib/jenkins/workspace/ODSOFT_Exercise6/ofbiz') {
      
        // Run unit tests
        sh returnStatus: true, script: './gradlew test'
        
        //Publish the results of unit tests
        publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: false, reportDir: 'build/reports/tests', reportFiles: 'index.html', reportName: 'HTML Report'])

      }


   }
}
